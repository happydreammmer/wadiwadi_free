{
    "manifest_version": 3,
    "name": "Wadi Wadi - Instagram Profile Analyzer",
    "version": "1.0.0",
    "description": "AI-powered Instagram profile analysis by Wadi Wadi",
    
    "permissions": [
      "activeTab",
      "downloads",
      "storage",
      "scripting"
    ],
    
    "host_permissions": [
      "https://www.instagram.com/*",
      "https://instagram.com/*",
      "https://generativelanguage.googleapis.com/*"
    ],
    
    "action": {
      "default_popup": "popup/popup.html",
      "default_title": "Wadi Wadi - Instagram Analyzer",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon32.png",
        "128": "icons/icon128.png"
      }
    },
    
    "background": {
      "service_worker": "background/background.js"
    },
    
    "content_scripts": [
      {
        "matches": [
          "https://www.instagram.com/*",
          "https://instagram.com/*"
        ],
        "js": [
          "utils/helpers.js",
          "utils/selectors.js",
          "content/extractor.js",
          "content/content.js"
        ],
        "run_at": "document_end"
      }
    ],
    
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon32.png",
      "128": "icons/icon128.png"
    },
    
    "web_accessible_resources": [
      {
        "resources": ["icons/*"],
        "matches": ["https://www.instagram.com/*", "https://instagram.com/*"]
      }
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self' https://esm.sh; object-src 'self'"
    }
  }